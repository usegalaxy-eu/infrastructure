variable "coviddb-dns" {
  default = "coviddb.galaxyproject.eu"
}

resource "openstack_compute_instance_v2" "coviddb" {
  name            = "coviddb"
  image_name      = "CentOS 8"
  flavor_name     = "m1.medium"
  key_pair        = "cloud2"
  security_groups = ["default", "public-ssh", "public-web2"]

  network {
    name = "public"
  }

  user_data = <<-EOF
    #cloud-config
    package_update: true
    package_upgrade: true
    users:
     - default
       ssh_authorized_keys:
         - "ssh-rsa "
    bootcmd:
        - test -z "$(blkid /dev/vdb)" && mkfs -t ext4 /dev/vdb
        - mkdir -p /scratch
    mounts:
        - ["/dev/vdb", "/scratch", auto, "defaults,nofail", "0", "2"]
    runcmd:
        - [ chown, "centos.centos", -R, /scratch ]
  EOF
}

resource "openstack_blockstorage_volume_v2" "coviddb-volume" {
  name        = "coviddb-volume"
  description = "Data volume for ${var.coviddb-dns}"
  size        = "100"
}

resource "openstack_compute_volume_attach_v2" "coviddb-internal-va" {
  instance_id = "${openstack_compute_instance_v2.coviddb.id}"
  volume_id   = "${openstack_blockstorage_volume_v2.coviddb-volume.id}"
}

resource "aws_route53_record" "coviddb" {
  zone_id = "${var.zone_galaxyproject_eu}"
  name    = "${var.coviddb-dns}"
  type    = "A"
  ttl     = "600"
  records = ["${openstack_compute_instance_v2.coviddb.access_ip_v4}"]
}
